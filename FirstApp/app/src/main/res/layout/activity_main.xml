<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:style="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" android:background="@android:color/darker_gray"
>

    <TextView
            android:text="@string/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeaderLabel"
            android:padding="24dp"
            tools:text="MÃ³j Label" android:textSize="24sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:text="@string/Donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button" android:id="@+id/Donate"
                android:background="@android:color/holo_blue_dark" android:textColor="@android:color/background_light"
                android:padding="5dp"
                android:textSize="18sp" android:textStyle="bold" android:layout_margin="5dp"/>
        <Button
                android:text="@string/Request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Request" style="@android:style/Widget.Button"
                android:background="@android:color/holo_red_dark" android:textSize="18sp" android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:padding="5dp" android:layout_margin="5dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sexId" android:layout_marginTop="40dp"
            android:textSize="24sp" android:textStyle="bold|italic"/>
</LinearLayout>
